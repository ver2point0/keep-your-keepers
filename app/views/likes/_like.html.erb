<% if policy(Like.new).create? %>
  <% if like = current_user.liked(keeper) %>
    <%= link_to [keeper, like], class: "btn btn-danger btn-xs", method: :delete do %>
      <i class="glyphicon glyphicon-star-empty"> </i>&nbsp; Unlike
    <% end %>
  <% else %>
    <%= link_to [keeper, Like.new], class: "btn btn-success btn-xs", method: :post do %>
      <i class="glyphicon glyphicon-star"> </i>&nbsp; Like
    <% end %>
  <% end %>
<% end %>